<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.ui.home.HomeFragment_Daily">

    <TextView
        android:id="@+id/textDateDaily"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Date"
        android:layout_marginTop="20dp"
        android:textSize="10pt"/>

    <ImageButton
        android:id="@+id/buttonTodoLeft"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/textDateDaily"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/left_arrow" />

    <ImageButton
        android:id="@+id/buttonTodoRight"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/textDateDaily"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/right_arrow" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTodoDaily"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/textDateDaily"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>