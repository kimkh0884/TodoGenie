<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:paddingLeft="4dp"
    android:paddingTop="8dp"
    android:paddingRight="4dp"
    android:paddingBottom="4dp"
    app:cardBackgroundColor="#F5F5F5"
    app:cardElevation="0dp">


    <LinearLayout
        android:id="@+id/layout_todo"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <CheckBox
            android:id="@+id/checkbox_todo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="15dp"
            android:checked="true" />


        <TextView
            android:id="@+id/title_todo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:text="To-do Title"
            android:textColor="#5B5454"
            android:textSize="8pt" />
        <TextView
            android:id="@+id/content_todo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:text="To-do Content"
            android:textColor="#5B5454"
            android:textSize="6pt" />
        <TextView
            android:id="@+id/start_todo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"

            android:text="To-do Start"
            android:textColor="#5B5454"
            android:textSize="6pt" />
        <TextView
            android:id="@+id/end_todo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:text="To-do End"
            android:textColor="#5B5454"
            android:textSize="6pt" />

        <LinearLayout
            android:id="@+id/layout_menus_todo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:alpha="1.0"
            android:layout_weight="0"
            android:gravity="center_vertical">
            <Button
                android:id="@+id/edit_todo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/edit"
                android:backgroundTint="#00FF0000"
                android:paddingStart="8dp" />
            <Button
                android:id="@+id/alarm_todo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/alarm"
                android:backgroundTint="#00FF0000"
                android:paddingStart="8dp" />
            <Button
                android:id="@+id/delete_todo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/close"
                android:backgroundTint="#00FF0000"
                android:paddingStart="8dp" />
        </LinearLayout>

        <Button
            android:id="@+id/menu_todo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/menu"
            android:backgroundTint="#00FF0000"
            android:paddingStart="8dp" />

    </LinearLayout>


</androidx.cardview.widget.CardView>